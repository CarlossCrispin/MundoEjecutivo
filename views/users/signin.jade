extends ../templates/default


meta(name='viewport', content='width=device-width, initial-scale=1')
link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
//link(rel='stylesheet', href='./stylesheet/modal1.css')
block content
    style.
        .modal-header, h4, .close {
        background-color: #666E93;
        color:white !important;
        text-align: center;
        font-size: 30px;
        }
        .modal-footer {
        background-color: #f9f9f9;
        }   
    .container
        // Trigger the modal with a button
        button#myBtn.btn.btn-default.btn-lg(type='button') Iniciar Sesión
        // Modal
    #myModal.modal.fade(role='dialog')
        .modal-dialog
            // Modal content
            .modal-content
                .modal-header(style='padding:35px 50px;')
                    button.close(type='button', data-dismiss='modal') ×
                    h4
                    span.glyphicon.glyphicon-lock
                    |  Iniciar Sesión
                .modal-body(style='padding:40px 50px;')
                    form(action='/auth/signin' method='post' autocomplete='off')
                            
                        .form-group
                            label(for='email')
                                span.glyphicon.glyphicon-user
                                |  Username
                            input#usrname.form-control(type='text' name='username' placeholder='Email'class='form-control')
                        .form-group
                            label(for='password')
                            span.glyphicon.glyphicon-eye-open
                            |  Password
                            input#psw.form-control(type='password' name='password' placeholder='Password'class='form-control' )
                        .checkbox
                            label
                            input(type='checkbox', value='', checked='')
                            | Remember me
                        button.btn.btn-success.btn-block(type='submit')
                            span.glyphicon.glyphicon-off
                            |  Iniciar Sesión
            .modal-footer
                button.btn.btn-danger.btn-default.pull-left(type='submit', data-dismiss='modal')
                    span.glyphicon.glyphicon-remove
                    |  Cancel
                p
                | Not a member? 
                a(href='#') Sign Up
                p
                | Forgot 
                a(href='#') Password?
            script.
                $(document).ready(function(){
                $("#myBtn").click(function(){
                $("#myModal").modal();
                });
                });
